{
  "compilerOptions": {
    "target": "es2017", // Change target to ES2017 to match Hardhat requirements
    "module": "commonjs", // Change module to commonjs for Hardhat
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "public/*",
    "build/types/**/*.ts",
    "hardhat.config.ts",
    "scripts",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}
